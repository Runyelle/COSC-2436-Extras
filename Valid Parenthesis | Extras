class Solution {
public:
    bool isValid(string s) {
        stack<char> c;
        
        if(s.length() % 2 == 1){
            return false;
        }

        for(int i = 0; i < s.length(); ++i){
            if(s[i] == '(' || s[i] == '{' || s[i] == '['){
                c.push(s[i]);
                continue;
            }
            if(c.empty()){
                return false;
            }
            else if(s[i] == ']' && c.top() != '['){
                return false;
            }

            else if(s[i] == ')' && c.top() != '('){
                return false;
            }

            else if(s[i] == '}' && c.top() != '{'){
                return false;
            }
            c.pop();
        }
        return c.empty();
    }
};
